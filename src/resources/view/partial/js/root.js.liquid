const signinBtn = document.getElementById("signin-btn")
signinBtn.onsubmit = () => {
  signinBtn
    .querySelector("img")
    .classList
    .add("ping")
    signinBtn
    .querySelector(".come-in")
    .removeAttribute("hidden")
  signinBtn
  .querySelector(".come-in")
  .classList
  .add("slide-in-top")
signinBtn
.querySelector(".get-out")
.classList
.add("slide-out-bottom")
signinBtn
.querySelector("button")
.setAttribute("disabled", "true")}